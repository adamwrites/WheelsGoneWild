    <div class="row">
        <div class="col-2">
            <h4>Category</h4>
            <ul id="category" class="list-group">
                {{#each category}}
                    <li class="list-group-item">{{this}}</li>
                {{/each}}
            </ul>

            <h4>Brand</h4>
            <ul id="brand" class="list-group">
                {{#each brand}}
                    <li class="list-group-item">{{this}}</li>
                {{/each}}
            </ul>

            <ul id="colour" class="list-group">
                <h4>Color</h4>
                {{#each colour}}
                    <li class="list-group-item">{{this}}</li>
                {{/each}}
            </ul>

            <ul id="frameSize" class="list-group">
                <h4>Frame Size</h4>
                {{#each frameSize}}
                    <li class="list-group-item">{{this}}</li>
                {{/each}}
            </ul>

            <ul id="frameMaterial" class="list-group">
                <h4>Frame Material</h4>
                {{#each frameMaterial}}
                    <li class="list-group-item">{{this}}</li>
                {{/each}}
            </ul>

            <ul id="year" class="list-group">
                <h4>Year</h4>
